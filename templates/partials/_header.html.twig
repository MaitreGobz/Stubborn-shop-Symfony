<header>
    <div class="header-container">
        <div class="logo">
            <img src="{{ asset('images/logo.png') }}" alt="Logo Stubborn">
            <p class="slogan">Don't compromise on your look</p>
        </div>
        <nav>
            <ul>
                {# Home link (always visible) #}
                <li>
                    <a href="{{ path('app_home') }}"
                        class="{{ app.request.get('_route') == 'app_home' ? 'active' : ''}}">
                        Accueil
                    </a>
                </li>

                {% if app.user %}
                    <li>
                        <a href="{{ path('app_products') }}" 
                            class="{{ app.request.get('_route') starts with 'app_products' ? 'active' : '' }}">
                            Boutique
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('app_cart') }}"
                            class="{{ app.request.get('_route') == 'app_cart' ? 'active' : ''}}">
                            Panier
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('app_logout') }}">
                            Se d√©connecter
                        </a>
                    </li>

                {% else %}

                    <li>
                        <a href="{{ path('app_register') }}"
                            class="{{ app.request.get('_route') == 'app_register' ? 'active' : ''}}">
                            S'inscrire
                        </a>
                    </li>
                    <li>
                        <a href="{{ path('app_login') }}"
                            class="{{ app.request.get('_route') == 'app_login' ? 'active' : '' }}">
                            Se connecter
                        </a>
                    </li>

                {% endif %}

            </ul>
        </nav>
    </div>
</header>